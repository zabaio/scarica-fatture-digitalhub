{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "dhUsername": {
      "type": "string",
      "description": "Nome utente DigitalHub"
    },
    "dhPassword": {
      "type": "string",
      "description": "Password Digitalhub"
    },
    "dhCessionari": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Lista di Cessionari di cui esportare le fatture"
    },
    "dhLastDayDownloaded": {
      "default": "2022-01-01",
      "type": "string",
      "format": "date",
      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))$",
      "description": "Giorno fino a cui ignorare le fatture precedenti - yyyy-MM-dd"
    },
    "dhMaxChunkSize": {
      "default": 30,
      "type": "integer",
      "minimum": 1,
      "maximum": 60,
      "description": "Durata massima in giorni di ciascuna esportazione"
    },
    "dhXmlDir": {
      "default": "data/xml",
      "type": "string",
      "description": "Percorso della cartella di destinazione delle fatture"
    },
    "dhArchiveDir": {
      "default": "data/archives",
      "type": "string",
      "description": "Percorso della cartella di destinazione delle archivi esportati"
    }
  },
  "required": [
    "dhUsername",
    "dhPassword",
    "dhCessionari",
    "dhLastDayDownloaded",
    "dhMaxChunkSize",
    "dhXmlDir",
    "dhArchiveDir"
  ],
  "additionalProperties": false
}